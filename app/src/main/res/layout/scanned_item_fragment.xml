<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/item_desc_scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/quantity_pick_layout"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/product_info_layout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_turtle_id"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:text="4234789"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/product_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="41320948" />

            <TextView
                android:id="@+id/product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="its big" />

            <TextView
                android:id="@+id/product_second_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="its bigger" />

            <TextView
                android:id="@+id/product_third_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="its the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggestits the biggest"
                android:layout_weight="0.39" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/quantity_pick_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/quantity_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter quantity available: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="22dp"/>

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_to_order"
            android:orientation="vertical"
            android:layout_marginStart="22dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/product_details_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/quantity_pick_layout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="77dp">

        <TextView
            android:id="@+id/minimum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="Min: 5"/>

        <TextView
            android:id="@+id/maximum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max: 100"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/bin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bin: 201"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="22dp"/>

    </RelativeLayout>

</RelativeLayout>