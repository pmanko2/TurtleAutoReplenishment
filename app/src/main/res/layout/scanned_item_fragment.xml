<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/product_info_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/product_number"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:layout_weight="1"
            android:text="4234789"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/product_customer_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="4123409" />

        <TextView
            android:id="@+id/product_turtle_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="41320948" />

        <TextView
            android:id="@+id/product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="its big" />

    </LinearLayout>

    <TextView
        android:id="@+id/quantity_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter quantity available: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toStartOf="@+id/number_to_order"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_to_order"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/number_to_order"
        android:layout_toStartOf="@+id/number_to_order"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp" />

</RelativeLayout>